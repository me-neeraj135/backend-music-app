<!-- @format -->

<%- include("partial/header")%>

<main class="lg-main">
  <h3 class="tertiary-heading text-center pad-tb color-wh">add collection</h3>
  <section class="flex justify-center pad-tb">
    <div class="login-box flex-40">
      <form
        action="/collections/uploadFile"
        method="post"
        enctype="multipart/form-data"
      >
        <label for="title">Title</label>
        <input type="text" name="title" id="title" placeholder="Title" />

        <label for="author">Author</label>
        <input type="text" name="author" id="author" placeholder="Author" />

        <label for="des">Description</label>
        <input
          type="text"
          name="description"
          id="des"
          placeholder="Description"
        />

        <label for="plan">Category</label>
        <select name="plan" id="plan">
          <option value="none" selected hidden>available for</option>
          <option value="free">Free</option>
          <option value="vip">Vip</option>
          <option value="premium">Premium</option>
        </select>
        <label for="audio">Audio file</label>
        <input type="file" id="audio" name="audio" />

        <label for="img">cover image</label>
        <input type="file" id="img" name="avatar" />
        <input type="submit" value="add" />
      </form>
    </div>
  </section>
</main>

<%- include("partial/footer")%>
